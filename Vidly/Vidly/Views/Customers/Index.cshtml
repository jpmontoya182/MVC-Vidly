@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td>We don't have any customer yet</td></tr>
        }
        else
        {
            foreach (var customer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(customer.Name, "Details", new { id = customer.Id }, null)
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
